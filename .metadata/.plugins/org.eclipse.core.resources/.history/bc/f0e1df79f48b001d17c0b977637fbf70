                    <div class="row">
                        <div class="col-6">
                            <input name="lower_price" type = "number" class = "form-control"  id = "lower_price" min="100" placeholder="Min. Price" onchange = "filter()" required/>
                        </div>
                        <div class="col-6">
                            <input name="upper_price" type = "number" class = "form-control"  id = "upper_price" min="100" placeholder="Max. Price" onchange = "filter()" required/>
                        </div>
                    </div>
                    <br>
                    
                    <h6>Size</h6>
                    <select id ="size_filter" class="form-select" name = "size_filter" onchange = "filter()" required>
                        <option selected value="">All</option>
